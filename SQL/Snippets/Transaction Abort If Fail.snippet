<?xml version="1.0" encoding="utf-8"?>  
<CodeSnippets  
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">  
    <CodeSnippet Format="1.0.0">  
        <Header>  
            <Title>Transaction Abort If Fail</Title>  
        </Header>  
        <Snippet>  
            <Code Language="SQL">  
                <![CDATA[
set xact_abort on
Begin Tran

commit tran

				]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
